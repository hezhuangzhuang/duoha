<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zxwl.duoha.activity.SetUrlActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="设置IP"/>

    <EditText
        android:id="@+id/et_ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入ip地址"/>

    <EditText
        android:id="@+id/et_ip_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入ip端口"/>

    <EditText
        android:id="@+id/et_access_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入文字接入码"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="请设置SIP"/>

    <EditText
        android:id="@+id/et_sip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入sip地址"/>

    <EditText
        android:id="@+id/et_sip_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入sip端口"/>

    <EditText
        android:id="@+id/et_audio_access_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入语音接入码"
        />

    <Button
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="确认"/>

</LinearLayout>
